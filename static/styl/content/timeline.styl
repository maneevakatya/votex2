.timeline{
	display: flex;

	&__inner{
		max-width: 1210px;
		width: 100%;
	}
	&__list{
		width: 100%;
	   display: flex;
		flex-direction: column;
	   justify-content: space-between;
	}
	&__title{
	  font-size: 28px;
	  color: #454545;
	  font-weight: 400;
	  margin: 0;
	  margin-bottom: 30px;
	}
	&__item-picture{
		max-width: 255px;
		width: 100%;
		margin-top: auto;
		margin-right: 20px;
	}
	&__item{
		display: flex;
		max-width: 577px;
		width: 100%;
		&:nth-child(2n){
			margin-left: auto;
			.timeline__item-picture{
				margin-right: 0;
				margin-left: 20px;
			}
		}
	}
	&__item-img{
		width: 100%;
		height: 175px;
		position: relative;
		bottom: -40px;
	}
	&__item-text{
		max-width: 300px;
		width: 100%;
		color: #454545;
		font-size: 16px;
		line-height: 36px;
		text-align: justify;
	}
}
