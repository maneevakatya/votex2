	section.vacancy
		.side-nav
			h1.side-nav__title Вакансии
			ul.side-nav__list
				li.side-nav__item.side-nav__item--active
					a(href="#").side-nav__link Москва
					ul.side-nav__list
						li.side-nav__item.side-nav__item
							a(href="#").side-nav__link Менеджер по работе с розничными сетями
						li.side-nav__item.side-nav__item
							a(href="#").side-nav__link Менеджер по работе с клиентами
